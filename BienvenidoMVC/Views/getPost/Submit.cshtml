
@{
    ViewBag.Title = "Submit";
}

<h2>Submit</h2>

@*COMENTARIOS*@
@*Se ejecuta el boton submit -> action , controller*@

@using (Html.BeginForm("Submit", "getPost", FormMethod.Get))
{
    <form>
        <div class="form-group row">
            <label for="parNombreUsuario" class="col-sm-2 col-form-label">Usuario</label>
            <div class="col-sm-10">
                @Html.TextBox("parNombreUsuario")            
            </div>
        </div>
        <div class="form-group row">
            <label for="parPwd" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                @Html.TextBox("parPwd")
            </div>
        </div>
        @* Boton *@
        <div class="form-group row">
            <div class="col-12">
                <input type="submit" value="Enviar"/>
            </div>
        </div>
    </form>
}


